<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="966px"
    android:layout_height="265px"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="255px"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_row_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="180px"
        android:layout_height="255px"
        android:layout_gravity="right"
        app:layout_constraintBottom_toBottomOf="@+id/item_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_background"
        tools:srcCompat="@drawable/ic_default_item_image" />

    <TextView
        android:id="@+id/name"
        android:layout_width="230dp"
        android:layout_height="26dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/mikhmoret"
        android:text="חשמל ומגנטיות כרך א - חשמל"
        android:textColor="#e5e5e5"
        android:textDirection="rtl"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="@+id/item_background"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/message"
        android:layout_width="230dp"
        android:layout_height="26dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mikhmoret"
        android:text="ע.זועבי"
        android:textColor="#161616"
        android:textDirection="rtl"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/item_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/mikhmoret"
        android:text="₪20"
        android:textColor="#e5e5e5"
        android:textDirection="ltr"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_background"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/item_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_background"
        app:srcCompat="@drawable/ic_bookmark_not_filled" />

</androidx.constraintlayout.widget.ConstraintLayout>